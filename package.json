{
  "name": "begin-app",
  "version": "0.0.0",
  "description": "Begin basic Apollo GraphQL API",
  "arc": {
    "app": "apollo-app",
    "http": [
      {
        "/graphql": {
          "method": "post",
          "src": "/graphql"
        }
      }
    ],
    "tables": [
      {
        "data": {
          "scopeID": "*String",
          "dataID": "**String",
          "ttl": "TTL"
        }
      }
    ]
  },
  "scripts": {
    "start": "npx sandbox",
    "test": "echo 'Add tests for your features.'"
  },
  "dependencies": {
    "@architect/sandbox": "latest"
  }
}
